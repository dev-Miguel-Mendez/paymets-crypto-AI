{
	"compilerOptions": {
		 /* Linting */
		 "strict": true,
		 "noUnusedLocals": true,
		 "noUnusedParameters": true,
		 "noFallthroughCasesInSwitch": true,
		 "noUncheckedSideEffectImports": true,
		 "sourceMap": true,
		
		/* Language and Environment */
		"target": "es2022",

		/* Modules */
		"module": "NodeNext",

		/* Emit */
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"skipLibCheck": true 
	},

	"exclude": [
		"node_modules",
		"vitest.config.ts",
		"tests"
	]
}
